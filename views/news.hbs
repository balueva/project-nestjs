{{#if news}}
<div class="row">
    <div class="col-lg-10">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{news.title}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">
                    Автор: {{news.author}}
                </h6>
                <h6 class="card-subtitle mb-2 text-muted">
                    Дата создания: {{news.createdAt}}
                </h6>
                <p class="card-text">{{news.description}}</p>

                <form id="form">
                    <div class="mb-3">
                        <label for="text" class="form-label">Текст</label>
                        <textarea class="form-control" id="text" name="text" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="author" class="form-label">Автор</label>
                        <input class="form-control" name="author" id="author">
                    </div>
                    <div class="form-group">
                        <label for="avatar">Аватар</label>
                        <input type="file" class="form-control-file" id="avatar" name="avatar">
                    </div>
                    <button type="submit" id="btnCreateComment">Создать</button>
                </form>
                {{#if comments}}
                {{#each comments}}
                <div>
                    <p>{{this.text}}</p>
                    {{#if this.author}}
                    <p>{{this.author}}</p>
                    {{/if}}
                    {{#if this.avatar}}
                    <img src="http://localhost:3000/{{this.avatar}}" class="card-img-bottom">
                    {{/if}}
                </div>
                {{/each}}
                {{else}}
                <p>Нет комментариев.</p>
                {{/if}}
            </div>
        </div>
    </div>
</div>
{{else}}
<h1>Новость не найдена</h1>
{{/if}}

<script>
    const btn = document.getElementById('btnCreateComment')
    btn.addEventListener('click', (event) => {
        event.preventDefault();
        const arr = window.location.pathname.split('/');
        const newsId = arr[arr.length - 2];

        const form = document.getElementById('form');

        const data = new FormData(form);
        console.log(data);

        const url = `/comments?newsId=${newsId}`;

        fetch(url, {
            method: 'POST',
            //headers: { 'Content-Type': 'multipart/form-data' },
            body: data;
        })
            .then(result => window.location.reload())
            .catch(error => console.log(error));

    })

</script>