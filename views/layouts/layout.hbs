<!-- Базовая конструкция html шаблона -->
<!DOCTYPE html>
<html class="h-100">

<head>
    <meta charset="utf-8" />
    <!-- Инициализирована переменная title для вставки заголовка страницы, именно
этот тег мы видим в поисковой выдаче и в названии вкладки браузера -->
    <title>{{title}}</title>
    <!-- Подключены внешние стили -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLAS
jC" crossorigin="anonymous">
    <script src="http://unpkg.com/react@17/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@17/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/babel-standalone@6/babel.min.js"></script>
    <script type="text/javascript" src="https://cdn.socket.io/4.1.2/socket.io.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.1/dist/js.cookie.min.js"></script>
</head>

<body class="d-flex flex-column h-100">
    <main class="flex-shrink-0">
        <div class="container">
            <!-- Инициализирована конструкция body, куда станут вставляться наши страницы -->
            {{{body}}}
        </div>
    </main>
    <!-- Инициализировано место под шаблон footer -->
    {{> footer}}
</body>

</html>